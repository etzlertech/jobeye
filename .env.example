# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database Connection (for migrations and direct access)
SUPABASE_DB_URL=postgresql://postgres.your-project:your-password@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Vision Language Model (VLM) API Keys
# Choose one or more providers:

# OpenAI (GPT-4 Vision)
OPENAI_API_KEY=sk-your-openai-api-key

# Google AI (Gemini Vision)
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Anthropic (Claude Vision) - if available
ANTHROPIC_API_KEY=your-anthropic-api-key

# Speech Services (Optional - uses browser Web Speech API by default)
# For server-side STT/TTS or enhanced capabilities:

# Google Cloud Speech-to-Text/Text-to-Speech
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# OpenAI Whisper (for STT)
# Uses OPENAI_API_KEY from above

# ElevenLabs (for enhanced TTS)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Cost Limits (in USD)
VLM_DAILY_BUDGET=25.00
VLM_REQUEST_LIMIT=0.10
STT_DAILY_BUDGET=10.00
TTS_DAILY_BUDGET=5.00
LLM_DAILY_BUDGET=50.00

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_VOICE_COMMANDS=true
ENABLE_CAMERA_INTENT=true
MAX_JOBS_PER_CREW=6
INTENT_RECOGNITION_FPS=1

# Scheduling Feature - Mapbox Configuration (Optional)
# Get your token from https://account.mapbox.com/
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Scheduling Feature - Twilio Configuration (Optional)
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Railway Deployment (Optional)
RAILWAY_STATIC_URL=https://your-app.railway.app

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id